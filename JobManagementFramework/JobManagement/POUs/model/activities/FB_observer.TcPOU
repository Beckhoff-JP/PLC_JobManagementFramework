<?xml version="1.0" encoding="utf-8"?>
<TcPlcObject Version="1.1.0.1" ProductVersion="3.1.4026.13">
  <POU Name="FB_observer" Id="{ba91026f-1b14-496b-9bee-5db4c9acb690}" SpecialFunc="None">
    <Declaration><![CDATA[FUNCTION_BLOCK FB_observer IMPLEMENTS InterfaceObserver
VAR_INPUT
	current_time : REFERENCE TO T_FILETIME64;
END_VAR
VAR_OUTPUT
	{attribute 'TcEncoding':='UTF-8'}
	text : T_MAXSTRING;
	error : BOOL;
	event_message : ST_JobEventMessage;
END_VAR
VAR
	queue : FB_EventMessageQueue;
	cycle_counter : UINT;
END_VAR
]]></Declaration>
    <Implementation>
      <ST><![CDATA[IF queue.usage > 0 THEN
	event_message := queue.get();
END_IF


]]></ST>
    </Implementation>
    <Method Name="subscribe_job_directory" Id="{cc4352ea-4318-48df-aee9-c6bfcea872ac}">
      <Declaration><![CDATA[METHOD subscribe_job_directory : BOOL
VAR_INPUT
	executor	: I_Job;
END_VAR
VAR
	job_log : STRING;
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[IF executor <> 0 THEN

	job_log := CONCAT(job_log, 'JOB STRUCTURE');
	IF executor.future <> 0 THEN
		job_log := CONCAT(job_log, '/ FUTURE_NAME : ');
		job_log := CONCAT(job_log, executor.future.future_name);
		job_log := CONCAT(job_log, ', ');	
	END_IF
	job_log := CONCAT(job_log, 'JOB_ID : ');
	job_log := CONCAT(job_log, executor.uid);

	ADSLOGSTR(msgCtrlMask := ADSLOG_MSGTYPE_LOG, msgFmtStr := job_log, strArg := '');
END_IF]]></ST>
      </Implementation>
    </Method>
    <Method Name="subscribe_job_event" Id="{e5fac08e-bd79-4abd-97a0-a76262921e4d}">
      <Declaration><![CDATA[METHOD subscribe_job_event : BOOL
VAR CONSTANT
	MAX_ALARM_TRACK_NUM : UDINT := 10;
END_VAR
VAR_INPUT
	subject		: T_MaxString;
	old_state	: E_FutureExecutionState;
	new_state	: E_FutureExecutionState;
	record_time	: Tc2_Utilities.T_FILETIME64;
	executor	: I_Job;
END_VAR
VAR_INST
	fb_timezone_info : FB_GetTimeZoneInformation := (bExecute := TRUE);
END_VAR
VAR
	last_state : STRING;
	current_state : STRING;
	container : InterfaceContainer;
	num_of_jobs : UINT;
	error_message_pool : ARRAY [1..MAX_ALARM_TRACK_NUM] OF ErrorTracking;
	i : UDINT;
	_event_message : ST_JobEventMessage;
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[last_state := TO_STRING(old_state);
current_state := TO_STRING(new_state);

IF executor <> 0 AND_THEN __QUERYINTERFACE(executor.future, container) THEN
	num_of_jobs := container.num_of_jobs;
ELSE
	num_of_jobs := 0;
END_IF

_event_message.job_id := executor.uid;
_event_message.num_of_job := num_of_jobs;
_event_message.new_state := TO_STRING(new_state);
_event_message.old_state := TO_STRING(old_state);
IF __ISVALIDREF(current_time) THEN
	_event_message.record_time := current_time;
ELSE	
	_event_message.record_time := record_time;
END_IF
_event_message.subject := executor.future.future_name;
queue.put(_event_message);

IF executor <> 0 THEN
	fb_timezone_info();
	text := FILETIME64_TO_ISO8601(fileTime := record_time, nBias := DINT_TO_INT(fb_timezone_info.tzInfo.bias), bUTC := TRUE,nPrecision := 6);
	text := CONCAT(text, '	');
	text := CONCAT(text, subject);
	text := CONCAT(text, '	');
	text := CONCAT(text, TO_STRING(current_state));
	text := CONCAT(text, '	');
	text := CONCAT(text, TO_STRING(executor.nErrorID));
	text := CONCAT(text, '		');
	text := CONCAT(text, executor.future.future_name);
	text := CONCAT(text, '		');
	text := CONCAT(text, executor.uid);
	text := CONCAT(text, '		');
	text := CONCAT(text, TO_STRING(num_of_jobs));
	
	IF executor.nErrorID <> 0 AND subject = 'TRANSITION' THEN
		i := 1;
		WHILE error_message_pool[i].error_id <> 0 AND i < MAX_ALARM_TRACK_NUM DO
			i := i + 1;
		END_WHILE
		error_message_pool[i].job_id := executor.uid;
		error_message_pool[i].error_id := executor.nErrorID;
	
	END_IF
	
	
	ADSLOGSTR(msgCtrlMask := ADSLOG_MSGTYPE_LOG,
 			 msgFmtStr := text, 
			strArg := '');	
END_IF

subscribe_job_event := TRUE;]]></ST>
      </Implementation>
    </Method>
  </POU>
</TcPlcObject>